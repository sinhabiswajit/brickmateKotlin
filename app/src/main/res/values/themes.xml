<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrickMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextViewBold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextViewRegular">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ButtonRegular">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="ButtonBold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>
</resources>